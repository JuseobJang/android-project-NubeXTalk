<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        style="@style/SettingItemWrapperStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_ripple_white_borderless"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/switchRow"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/titleRow"
                style="@style/SettingTextItemStyle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/descRow"
                style="@style/SettingTextItemStyle"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_s"
                android:paddingLeft="@dimen/padding_m"
                android:paddingRight="@dimen/padding_m"
                android:layout_marginTop="@dimen/margin_s"
                android:lines="1" />
        </LinearLayout>

        <Switch
            android:id="@+id/switchRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/elevation_m"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</RelativeLayout>