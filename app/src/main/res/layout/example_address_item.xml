<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/elevation_s"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/txtType"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/padding_m"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_m" />

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/txtType"
                android:layout_toRightOf="@+id/txtType"
                android:background="@color/cContent" />

            <LinearLayout
                android:id="@+id/wrapper1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:padding="@dimen/padding_m">

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/txtRating"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_s"
                    android:layout_marginTop="@dimen/margin_s"
                    android:gravity="center_vertical|right"
                    android:lines="1"
                    android:paddingBottom="@dimen/padding_s"
                    android:paddingLeft="@dimen/padding_m"
                    android:paddingRight="@dimen/padding_m"
                    android:paddingTop="@dimen/padding_s"
                    android:textColor="@color/cContentText"
                    android:textSize="@dimen/txt_s"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/wrapper1"
                android:layout_toRightOf="@+id/divider"
                android:layout_alignBottom="@+id/txtType"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:lines="1"
                    android:paddingBottom="@dimen/padding_m"
                    android:paddingLeft="@dimen/padding_m"
                    android:textColor="@color/cBlack"
                    android:textSize="@dimen/txt_m" />

                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtName"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/padding_xl"
                    android:textColor="@color/cContentText"
                    android:textSize="@dimen/txt_m" />

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
