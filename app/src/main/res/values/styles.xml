<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="chat_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="word_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingTextHeaderStyle" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/padding_xl</item>
        <item name="android:paddingTop">@dimen/padding_m</item>
        <item name="android:paddingBottom">@dimen/padding_m</item>
        <item name="android:paddingRight">@dimen/padding_m</item>
        <item name="android:layout_marginTop">@dimen/margin_xl</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/cBlack</item>
        <item name="android:background">@color/cWhite</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingItemWrapperStyle">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:paddingLeft">@dimen/padding_Ml</item>
        <item name="android:paddingTop">@dimen/padding_m</item>
        <item name="android:paddingBottom">@dimen/padding_m</item>
        <item name="android:paddingRight">@dimen/padding_Ml</item>
    </style>

    <style name="SettingTextItemStyle" parent="android:Widget.TextView">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/cContentText</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
