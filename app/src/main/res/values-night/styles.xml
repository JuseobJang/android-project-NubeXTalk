<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:label">@color/cBlack</item>
        <item name="bgColor">@color/colorPrimaryDark</item>
        <item name="textColor">@color/cWhite</item>

        <item name="bgButton">@color/cGrey</item>
        <item name="bgToolbar">@color/cBackground</item>
        <item name="bgBottomSheetColor">@color/colorPrimary</item>
        <item name="bgChatRoomColor">@color/cChatRoomBackground</item>
        <item name="bgSettingIconColor">@color/cGrey</item>
        <item name="bgSettingClickColor">@color/cWhiteGray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="chat_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="word_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingTextHeaderStyle" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/padding_xl</item>
        <item name="android:paddingTop">@dimen/padding_m</item>
        <item name="android:paddingBottom">@dimen/padding_m</item>
        <item name="android:paddingRight">@dimen/padding_m</item>
        <item name="android:layout_marginTop">@dimen/margin_xl</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:background">?attr/bgSettingIconColor</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingItemWrapperStyle">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:paddingLeft">@dimen/padding_Ml</item>
        <item name="android:paddingTop">@dimen/padding_m</item>
        <item name="android:paddingBottom">@dimen/padding_m</item>
        <item name="android:paddingRight">@dimen/padding_Ml</item>
    </style>

    <style name="SettingTextItemStyle" parent="android:Widget.TextView">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/cContentText</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>